{
	"name": "cantopy",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"containerUser": "robbe",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot", // Code assistant
				"ms-python.python", // Python
				"ms-toolsai.jupyter", // Jupyter
