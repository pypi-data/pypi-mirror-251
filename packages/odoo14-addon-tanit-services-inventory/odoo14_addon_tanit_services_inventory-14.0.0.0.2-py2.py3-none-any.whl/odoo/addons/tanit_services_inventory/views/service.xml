  <!-- Action -->
  <record id="action_tanit_services_view" model="ir.actions.act_window">
    <field name="name">Services</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">tanit_inventory.service</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{"search_default_active":1}</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Services
        </p>
        <p>
          Click on 'New Item'
        </p>
    </field>
  </record>



  <!-- Menuitems -->
  <menuitem id="menu_tanit_services_view" name="Services" parent="menu_tanit_services_inventory_root" action="action_tanit_services_view"/>
  </data>
</odoo>